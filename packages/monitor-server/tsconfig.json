{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "lib": [
            "es2021"
        ],
        "outDir": "build",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "baseUrl": ".",
        "plugins": [
            {
                "name": "@0no-co/graphqlsp",
                "schema": "./graphql/types/schema.graphql"
            }
        ],
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "prisma/**/*",
        "jest.setup.ts",
        "test/**/*",
        "graphql/custom/**/*"
    ]
}